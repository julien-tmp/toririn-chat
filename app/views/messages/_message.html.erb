<div class="message">
<li class="media">
  <div class="media-left">
    <div class="pull-left">
      <%= image_tag message.user.icon, size:'40x40', class:'media-object img-circle' %>
    </div>
  </div>
  <div class="media-body">
    <p class="message-header">
      <span>
        <strong><%= message.user.name %></strong>
        <small class="relative-timestamp"><%= time_ago_in_words(message.created_at) %></small>
      </span>
    </p>
    <p class="message-content">
      <span><%= message.content %></span>
    </p>
  </div>
</li>
</div>
